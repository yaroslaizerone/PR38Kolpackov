#:import XCamera kivy.garden.xcamera.XCamera

ScreenManagement:
    MainScreen:
    CameraScreen:

<MainScreen>:
    name: 'main_screen'

    FloatLayout:
        Button:
            text: 'Открыть камеру'
            pos_hint: {'center_x':5, 'center_y': .5}
            size_hint: .9, .2
            on_release: app.root.current = "Camera"


<CameraScreen>:
    name: 'Camera'

    FloatLayout:
        orintation: "vertical"
        XCamera:
            id: xcamera
            on_picture_taken: app.picture_taken()

        Button:
            text: 'Capture'
            size_hint: .2, .1
            pos_hint: {"center_x": .5}
            on_press: app.chenge_cam(*args)